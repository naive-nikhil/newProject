    alt: "Université Laval Logo",
  },
  {
    name: "4th Whale",
    src: client2.src,
    alt: "4th Whale Logo",
  },
  {
    name: "axify",
    src: clients1.src,
    alt: "axify Logo",
  },
  {
    name: "ILLUXI",
    src: client3.src,
    alt: "ILLUXI Logo",
  },
  {
    name: "KOLORTRAK",
    src: client4.src,
    alt: "KOLORTRAK Logo",
  },
  {
    name: "MUUTI",
    src: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSE4aAneOBqZNm6K2eKaajbeCxriMnZJHlErw&s",
    alt: "MUUTI Logo",
  },

  {
    src: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTJn0lVhKk5c4gsf9EWHE3KtR15Cc6R9YiB9Q&s",
  },
  {
    name: "vishwaguru academy",
    src: "https://i.ytimg.com/vi/ANrtY3Q4_Vw/hq720.jpg?sqp=-oaymwE7CK4FEIIDSFryq4qpAy0IARUAAAAAGAElAADIQj0AgKJD8AEB-AGKCYAC0AWKAgwIABABGCEgQSh_MA8=&rs=AOn4CLCgWeDkNm7HPN9XXWNnPzHZgiWCvw",
    alt: "vishwaguru Logo",
  },
  {
    name: "Caprize",
    src: "https://cdn.prod.website-files.com/65f95dd2dc04cb6fb9ef34e0/6603d405282f2b2acbf761a2_Open_Graph_Image.jpg",
    alt: "Caprize Logo",
  },
];

const scrollDuration = "40s";
---

<style>
  @media (min-width: 780px) {
    .mainDiv h2 {
      font-size: 2.75rem;
      line-height: 4.25rem;
      text-align: left;
    }
    @media (min-width: 1200px) {
      .mainDiv h2 {
        font-size: 2rem;
        text-align: center;
      }
    }
    @media (min-width: 1400px) {
      .mainDiv h2 {
        font-size: 4rem;
        text-align: center;
      }
    }
  }
</style>
<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto mainDiv overflow-hidden">
    <h2
      class="text-[1.5rem] mx-5 text-[#474747] text-left lg:text-center mb-10"
    >
      Clients
    </h2>

    <div class="relative w-full overflow-hidden">
      <div class="marquee-wrapper">
        <!-- First track -->
        <div
          class="marquee-track"
          style={`animation-duration: ${scrollDuration};`}
        >
          {
            clients.map((client, index) => (
              <div class="marquee-item flex-shrink-0   m-5  w-[200px] md:w-[270px] mx-8 flex items-center justify-center h-36 hover:opacity-100 transition duration-300">
                <img
                  src={client.src}
                  alt={client.alt || `Client ${index + 1}`}
                  class="max-h-full grayscale  hover:scale-90  max-w-full object-cover"
                />
              </div>
            ))
          }
        </div>
        <!-- Second track (duplicate for seamless loop) -->
        <div
          class="marquee-track"
          style={`animation-duration: ${scrollDuration};`}
          aria-hidden="true"
        >
          {
            clients.map((client, index) => (
              <div class="marquee-item flex-shrink-0  m-5  w-[200px] md:w-[270px] mx-8 flex items-center justify-center h-40 hover:opacity-100 transition duration-300">
                <img
                  src={client.src}
                  alt={client.alt || `Client ${index + 1}`}
                  class="max-h-full grayscale  hover:scale-90  max-w-full object-cover"
                />
              </div>
            ))
          }
        </div>
      </div>

      <div
        class="absolute inset-y-0 left-0 w-16 bg-gradient-to-r from-white to-transparent pointer-events-none z-10"
      >
      </div>
      <div
        class="absolute inset-y-0 right-0 w-16 bg-gradient-to-l from-white to-transparent pointer-events-none z-10"
      >
      </div>
    </div>
  </div>
</section>

<style define:vars={{ scrollDuration }}>
  .marquee-wrapper {
    display: flex;
    width: fit-content;
  }

  .marquee-track {
    display: flex;
    flex-shrink: 0;
    animation: scroll-left var(--scrollDuration) linear infinite;
  }

  @keyframes scroll-left {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
