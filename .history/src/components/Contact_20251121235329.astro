<div class="bg-white p-6 md:p-12 lg:p-16 max-w-4xl mx-auto my-10">
  <h2 class="text-5xl font-normal text-center mb-10 text-gray-700">
    Got questions?
  </h2>

  <form method="POST" action="#" class="space-y-6">
    <div>
      <label
        for="full-name"
        class="block text-base font-semibold text-gray-700 mb-2"
        >Full name</label
      >
      <input
        type="text"
        id="full-name"
        name="full-name"
        class="block w-full border-gray-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-3 text-lg transition duration-150 ease-in-out border"
        required
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label
          for="email"
          class="block text-base font-semibold text-gray-700 mb-2">Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          class="block w-full border-gray-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-3 text-lg transition duration-150 ease-in-out border"
          required
        />
      </div>
      <div>
        <label
          for="telephone"
          class="block text-base font-semibold text-gray-700 mb-2"
          >Telephone</label
        >
        <input
          type="tel"
          id="telephone"
          name="telephone"
          class="block w-full border-gray-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-3 text-lg transition duration-150 ease-in-out border"
        />
      </div>
    </div>

    <div>
      <label
        for="company"
        class="block text-base font-semibold text-gray-700 mb-2">Company</label
      >
      <input
        type="text"
        id="company"
        name="company"
        class="block w-full border-gray-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-3 text-lg transition duration-150 ease-in-out border"
      />
    </div>

    <div>
      <label
        for="message"
        class="block text-base font-semibold text-gray-700 mb-2">Message</label
      >
      <textarea
        id="message"
        name="message"
        rows="6"
        class="block w-full border-gray-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-3 text-lg transition duration-150 ease-in-out resize-none border"
        required></textarea>
    </div>

    <div class="flex items-start pt-2">
      <input
        id="terms"
        name="terms"
        type="checkbox"
        class="h-5 w-5 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mr-3 mt-1"
        required
      />
      <label for="terms" class="text-sm text-gray-600">
        I accept Stable's
        <a href="#" class="text-indigo-600 hover:text-indigo-800 underline"
          >terms and conditions</a
        >,
        <a href="#" class="text-indigo-600 hover:text-indigo-800 underline"
          >privacy policy</a
        > and
        <a href="#" class="text-indigo-600 hover:text-indigo-800 underline"
          >security policy</a
        >.
      </label>
    </div>

    <div class="pt-4">
      <button
        type="submit"
        class="w-full py-4 text-xl font-bold rounded-xl text-white bg-purple-500 hover:bg-purple-600 focus:outline-none focus:ring-4 focus:ring-purple-300 transition duration-150 ease-in-out"
        style="background-color: #A78BFA; box-shadow: 0 4px 14px 0 rgba(167, 139, 250, 0.5);"
      >
        Send Messages
      </button>
    </div>
  </form>
</div>
