<div class="bg-white p-6 md:p-12 lg:p-16 max-w-4xl mx-auto my-10">
  <h2 class="text-4xl font-semibold text-center mb-10 text-[#474747]">
    Got questions?
  </h2>

  <form method="POST" action="#" class="space-y-6">
    <!-- Full Name -->
    <div>
      <label
        for="full-name"
        class="block text-base font-medium text-gray-700 mb-2"
      >
        Full name
      </label>
      <input
        type="text"
        id="full-name"
        name="full-name"
        class="block w-full border border-[#ced4da] rounded-md shadow-sm
               focus:border-indigo-500 focus:ring-indigo-500
               py-2.5 px-3 text-[1rem] transition"
        required
      />
    </div>

    <!-- Email + Phone Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label
          for="email"
          class="block text-base font-medium text-gray-700 mb-2"
        >
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="block w-full border border-[#ced4da] rounded-md shadow-sm
                 focus:border-indigo-500 focus:ring-indigo-500
                 py-2.5 px-3 text-[1rem]"
          required
        />
      </div>

      <div>
        <label
          for="telephone"
          class="block text-base font-medium text-gray-700 mb-2"
        >
          Telephone
        </label>
        <input
          type="tel"
          id="telephone"
          name="telephone"
          class="block w-full border border-[#ced4da] rounded-md shadow-sm
                 focus:border-indigo-500 focus:ring-indigo-500
                 py-2.5 px-3 text-[1rem]"
        />
      </div>
    </div>

    <!-- Company -->
    <div>
      <label
        for="company"
        class="block text-base font-medium text-gray-700 mb-2"
      >
        Company
      </label>
      <input
        type="text"
        id="company"
        name="company"
        class="block w-full border border-[#ced4da] rounded-md shadow-sm
               focus:border-indigo-500 focus:ring-indigo-500
               py-2.5 px-3 text-[1rem]"
      />
    </div>

    <!-- Message -->
    <div>
      <label
        for="message"
        class="block text-base font-medium text-gray-700 mb-2"
      >
        Message
      </label>
      <textarea
        id="message"
        name="message"
        rows="6"
        class="block w-full border border-[#ced4da] rounded-md shadow-sm
               focus:border-indigo-500 focus:ring-indigo-500
               p-3 text-[1rem] resize-none"
        required></textarea>
    </div>

    <!-- Terms Checkbox -->
    <div class="flex items-start pt-2">
      <input
        id="terms"
        name="terms"
        type="checkbox"
        class="h-5 w-5 border border-[#ced4da] rounded-sm text-indigo-600
               focus:ring-indigo-500 mr-3 mt-1"
        required
      />
      <label for="terms" class="text-sm text-gray-600 leading-6">
        I accept Stable's
        <a href="#" class="text-indigo-600 underline">terms and conditions</a>,
        <a href="#" class="text-indigo-600 underline">privacy policy</a>, and
        <a href="#" class="text-indigo-600 underline">security policy</a>.
      </label>
    </div>

    <!-- Button -->
    <div class="pt-4">
      <button
        type="submit"
        class="w-full py-4 text-lg font-semibold rounded-xl text-white
               bg-[#A78BFA] hover:bg-purple-600
               focus:outline-none focus:ring-4 focus:ring-purple-300
               transition shadow-md"
      >
        Send Message
      </button>
    </div>
  </form>
</div>
