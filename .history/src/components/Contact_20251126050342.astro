<section class="relative bg-white">
  <div class="mx-auto w-[95vw] max-w-[1400px] py-12">
    <div class="flex justify-center">
      <div class="w-full max-w-[1200px] relative">
        <!-- Header -->
        <header class="text-center mb-6">
          <h2 class="mb-0 text-[2.5rem] font-medium text-[#222]">
            Got questions?
          </h2>
        </header>

        <!-- Contact form (CF7 markup preserved, styling converted to Tailwind) -->
        <div
          id="wpcf7-f335-p97-o1"
          lang="en-US"
          dir="ltr"
          data-wpcf7-id="335"
          class="wpcf7 js"
        >
          <div
            class="screen-reader-response sr-only"
            aria-live="polite"
            role="status"
          >
            <p></p><ul></ul>
          </div>

          <form
            action="/#wpcf7-f335-p97-o1"
            method="post"
            class="wpcf7-form init space-y-6"
            aria-label="Contact form"
            novalidate
            data-status="init"
          >
            <fieldset class="hidden-fields-container sr-only">
              <!-- hidden CF7 fields kept as-is -->
              <input type="hidden" name="_wpcf7" value="335" />
              <input type="hidden" name="_wpcf7_version" value="6.1.2" />
              <input type="hidden" name="_wpcf7_locale" value="en_US" />
              <input
                type="hidden"
                name="_wpcf7_unit_tag"
                value="wpcf7-f335-p97-o1"
              />
              <input type="hidden" name="_wpcf7_container_post" value="97" />
              <input type="hidden" name="_wpcf7_posted_data_hash" value="" />
              <input type="hidden" name="_wpcf7_recaptcha_response" value="" />
            </fieldset>

            <!-- Full name -->
            <div class="form-group">
              <label
                for="contact-name"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Full name</label
              >
              <span class="wpcf7-form-control-wrap" data-name="contact-name">
                <input
                  id="contact-name"
                  name="contact-name"
                  type="text"
                  maxlength="400"
                  size="40"
                  class="w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-3 text-base shadow-sm focus:outline-none focus:ring-1 focus:ring-[#7256d4] focus:border-[#7256d4]"
                  aria-required="true"
                  aria-invalid="false"
                />
              </span>
            </div>

            <!-- Email + Phone -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="form-group">
                <label
                  for="contact-email"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Email</label
                >
                <span class="wpcf7-form-control-wrap" data-name="contact-email">
                  <input
                    id="contact-email"
                    name="contact-email"
                    type="email"
                    maxlength="400"
                    size="40"
                    class="w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-3 text-base shadow-sm focus:outline-none focus:ring-1 focus:ring-[#7256d4] focus:border-[#7256d4]"
                    aria-required="true"
                    aria-invalid="false"
                  />
                </span>
              </div>

              <div class="form-group">
                <label
                  for="contact-phone"
                  class="block text-sm font-medium text-gray-700 mb-2"
                  >Telephone</label
                >
                <span class="wpcf7-form-control-wrap" data-name="contact-phone">
                  <input
                    id="contact-phone"
                    name="contact-phone"
                    type="tel"
                    maxlength="400"
                    size="40"
                    class="w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-3 text-base shadow-sm focus:outline-none focus:ring-1 focus:ring-[#7256d4] focus:border-[#7256d4]"
                    aria-required="true"
                    aria-invalid="false"
                  />
                </span>
              </div>
            </div>

            <!-- Company -->
            <div class="form-group">
              <label
                for="contact-company"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Company</label
              >
              <span class="wpcf7-form-control-wrap" data-name="contact-company">
                <input
                  id="contact-company"
                  name="contact-company"
                  type="text"
                  maxlength="400"
                  size="40"
                  class="w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-3 text-base shadow-sm focus:outline-none focus:ring-1 focus:ring-[#7256d4] focus:border-[#7256d4]"
                  aria-required="true"
                  aria-invalid="false"
                />
              </span>
            </div>

            <!-- Message -->
            <div class="form-group">
              <label
                for="contact-message"
                class="block text-sm font-medium text-gray-700 mb-2"
                >Message</label
              >
              <span class="wpcf7-form-control-wrap" data-name="contact-message">
                <textarea
                  id="contact-message"
                  name="contact-message"
                  rows="6"
                  cols="40"
                  maxlength="2000"
                  class="w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-3 text-base shadow-sm focus:outline-none focus:ring-1 focus:ring-[#7256d4] focus:border-[#7256d4] resize-none"
                  aria-required="true"
                  aria-invalid="false"></textarea>
              </span>
            </div>

            <!-- Terms (checkbox acceptance) -->
            <div class="form-group">
              <span class="wpcf7-form-control-wrap" data-name="terms">
                <span class="wpcf7-form-control wpcf7-acceptance">
                  <span class="wpcf7-list-item">
                    <label class="inline-flex items-start space-x-3">
                      <input
                        type="checkbox"
                        name="terms"
                        value="1"
                        class="h-5 w-5 rounded-sm border border-[#d1d5db] mt-1"
                        aria-invalid="false"
                      />
                      <span class="text-sm text-gray-600">
                        I accept Stable's
                        <a
                          href="https://www.stableapp.cloud/terms-and-conditions/"
                          target="_blank"
                          class="text-indigo-600 underline"
                          >terms and conditions</a
                        >,
                        <a
                          href="https://www.stableapp.cloud/privacy-policy/"
                          target="_blank"
                          class="text-indigo-600 underline">privacy policy</a
                        >
                        and
                        <a
                          href="https://www.stableapp.cloud/security/"
                          target="_blank"
                          class="text-indigo-600 underline">security policy</a
                        >.
                      </span>
                    </label>
                  </span>
                </span>
              </span>
            </div>

            <!-- Actions (submit button) -->
            <div class="actions">
              <button
                type="submit"
                class="relative w-full inline-flex items-center justify-center py-4 px-6 text-lg font-semibold text-white rounded-xl bg-[#A78BFA] disabled:opacity-60 disabled:cursor-not-allowed shadow-md overflow-hidden"
                disabled
              >
                <div class="relative z-10">Send message</div>
                <span class="absolute inset-0 btn__hover pointer-events-none"
                ></span>
                <span class="absolute inset-0 btn__active pointer-events-none"
                ></span>
              </button>
            </div>

            <div class="wpcf7-response-output mt-2" aria-hidden="true"></div>
          </form>
        </div>

        <!-- decorative shapes (kept absolute, with same data attributes) -->
        <div
          class="content-block--form__shape-wrapper content-block--form__shape-wrapper--1 absolute top-1/2 right-full z-30 pointer-events-none"
        >
          <img
            class="content-block--form__shape content-block--form__shape--1 block w-[682px] h-auto opacity-0 will-change-transform"
            src="https://www.stableapp.cloud/app/themes/shape/assets/dist/img/svg/stable-shape-1.svg"
            alt=""
            width="682"
            height="616"
            data-speed="clamp(0.5)"
            data-lag="0"
            style="transform: translate(0px, 345.698px) rotate(-45deg); filter: blur(100px); opacity: 0;"
          />
        </div>

        <div
          class="content-block--form__shape-wrapper content-block--form__shape-wrapper--2 absolute top-0 left-full z-30 pointer-events-none"
        >
          <img
            class="content-block--form__shape content-block--form__shape--2 block w-[842px] h-auto opacity-0 will-change-transform"
            src="https://www.stableapp.cloud/app/themes/shape/assets/dist/img/svg/stable-shape-2.svg"
            alt=""
            width="842"
            height="798"
            data-speed="clamp(0.5)"
            data-lag="0"
            style="transform: translate(0px, 449.198px) rotate(45deg); filter: blur(100px); opacity: 0;"
          />
        </div>
      </div>
    </div>
  </div>
</section>
