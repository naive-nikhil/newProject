<style>
  @media (min-width: 780px) {
    .mainDiv h2 {
      font-size: 2.75rem;
      line-height: 4.25rem;
    }
    @media (min-width: 1200px) {
      .mainDiv h2 {
        font-size: 2rem;
      }
    }
    @media (min-width: 1400px) {
      .mainDiv h2 {
        font-size: 4rem;
      }
    }
  }
</style>

<div
  id="hero-root"
  class="bg-white mainDiv overflow-x-hidden p-6 md:p-12 lg:p-16 max-w-4xl mx-auto my-10 shadow-sm"
>
  <img
    src="https://www.stableapp.cloud/app/themes/shape/assets/dist/img/svg/stable-shape-1.svg"
    alt=""
    width="682"
    height="616"
    data-speed="clamp(0.5)"
    data-lag="0"
    class="absolute blob1 -left-[10vw] h-auto max-w-[500px] max-h-[500px] transform translate-x-0 translate-y-0 rotate-0 scale-100 opacity-100 will-change-[transform]"
  />
  <img
    src="https://www.stableapp.cloud/app/themes/shape/assets/dist/img/svg/stable-shape-1.svg"
    alt=""
    width="682"
    height="616"
    data-speed="clamp(0.5)"
    data-lag="0"
    class="block blob1 absolute -right-[7vw] w-full h-auto max-w-[500px] max-h-[500px] transform translate-x-0 translate-y-0 rotate-0 scale-100 opacity-100 will-change-[transform]"
  />
  <h2
    class="text-[2.5rem] z-30 lg:text-[4rem] leading-[4.25rem] font-medium text-center mb-6 text-[#474747]"
  >
    Got questions?
  </h2>

  <form
    id="contactForm"
    method="POST"
    action="#"
    class="space-y-6 z-30"
    novalidate
  >
    <div>
      <label
        for="full-name"
        class="block text-base font-medium text-gray-700 mb-">Full name</label
      >
      <input
        type="text"
        id="full-name"
        name="full-name"
        required
        class="block w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-2 text-[1rem] shadow-sm focus:border-[#7256d4] focus:ring-1 focus:ring-[#7256d4] transition"
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label
          for="email"
          class="block text-base font-medium text-gray-700 mb-1">Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="block w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-2 text-[1rem] shadow-sm focus:border-[#7256d4] focus:ring-1 focus:ring-[#7256d4] transition"
        />
      </div>

      <div>
        <label
          for="telephone"
          class="block text-base font-medium text-gray-700 mb-1"
          >Telephone</label
        >
        <input
          type="tel"
          id="telephone"
          name="telephone"
          class="block w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-2 text-[1rem] shadow-sm focus:border-[#7256d4] focus:ring-1 focus:ring-[#7256d4] transition"
        />
      </div>
    </div>

    <div>
      <label
        for="company"
        class="block text-base font-medium text-gray-700 mb-2">Company</label
      >
      <input
        type="text"
        id="company"
        name="company"
        class="block w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-2 text-[1rem] shadow-sm focus:border-[#7256d4] focus:ring-1 focus:ring-[#7256d4] transition"
      />
    </div>

    <div>
      <label
        for="message"
        class="block text-base font-medium text-gray-700 mb-1">Message</label
      >
      <textarea
        id="message"
        name="message"
        rows="6"
        required
        class="block w-full rounded-[8px] border border-[#e1e1e1] bg-white px-4 py-2 text-[1rem] shadow-sm focus:border-[#7256d4] focus:ring-1 focus:ring-[#7256d4] transition resize-none"
      ></textarea>
    </div>

    <div class="flex items-start pt-1">
      <input
        id="terms"
        name="terms"
        type="checkbox"
        required
        class="h-6 w-6 border border-[#d1d5db] rounded-sm text-indigo-600 focus:ring-indigo-500 mr-3 mt-1"
      />
      <label for="terms" class="text-sm text-gray-600 leading-6">
        I accept Stable's
        <a href="#" class="text-indigo-600 underline">terms and conditions</a>,
        <a href="#" class="text-indigo-600 underline">privacy policy</a>, and
        <a href="#" class="text-indigo-600 underline">security policy</a>.
      </label>
    </div>

    <div class="pt-4">
      <button
        id="submitBtn"
        type="submit"
        disabled
        class="relative w-full py-4 text-xl font-bold rounded-xl text-white bg-[#A78BFA] disabled:opacity-60 disabled:cursor-not-allowed overflow-hidden shadow-md"
      >
        <span class="relative z-10">Send Message</span>
        <span
          class="absolute inset-0 z-0 transform -translate-y-full bg-white/10 transition-transform duration-300"
        ></span>
        <span
          class="absolute inset-0 z-0 opacity-0 bg-black/10 transition-opacity duration-150"
        ></span>
      </button>
    </div>
  </form>
</div>

<script type="module" defer>
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";

  gsap.registerPlugin(ScrollTrigger);

  const blob = document.querySelectorAll(".blob1");
  const hero = document.querySelector("#hero-root");

  if (blob && hero) {
    gsap.fromTo(
      blob,
      {
        // FROM state
        y: 1,
        opacity: 1,
        scale: 1,
      },
      {
        // TO state (Using clearer visibility settings)
        y: 350,
        opacity: 0.2,
        scale: 0.8,
        duration: 1,
        ease: "power3.out",

        scrollTrigger: {
          trigger: hero,
          start: "top top",
          end: "bottom top",
          markers: true,
          toggleActions: "play none none reverse",
        },
      }
    );
  } else {
    console.warn(
      "GSAP/ScrollTrigger failed: 'blob' or 'hero' element not found."
    );
  }
</script>
