---

<style>
  /* small responsive heading rules */
  @media (min-width: 780px) {
    .mainDiv h2 {
      font-size: 2.75rem;
      line-height: 4.25rem;
    }
  }
  @media (min-width: 1200px) {
    .mainDiv h2 {
      font-size: 2rem;
    }
  }
  @media (min-width: 1400px) {
    .mainDiv h2 {
      font-size: 4rem;
    }
  }

  /* make sure blurred edges are visible and soft */
  .blob {
    pointer-events: none;
    border-radius: 9999px;
    filter: blur(28px); /* not too big, not too small */
    mix-blend-mode: normal;
  }

  /* reduced motion safe */
  @media (prefers-reduced-motion: reduce) {
    .blob {
      filter: blur(20px);
      transition: none !important;
      transform: none !important;
    }
  }
</style>

<!-- Outer wrapper must be full width (w-screen) and relative -->
<div id="hero" class="w-screen h-screen relative">
  <div
    class="blob absolute top-5 right-0 -translate-y-1/2
         w-[25vw] h-[25vw] md:w-[20vw] md:h-[20vw] lg:w-[24vw] lg:h-[24vw]
         bg-[#047bca]/40 opacity-50 blur-3xl rounded-full z-0"
  >
  </div>
  <!-- card container (positioned, allows overflow so blob isn't clipped) -->
  <div class="mainDiv p-6 md:p-12 lg:p-16 max-w-4xl mx-auto my-10 shadow-sm">
    <h2
      class="text-[2.5rem] z-20 lg:text-[4rem] leading-[4.25rem] font-medium text-center mb-6 text-[#474747]"
    >
      Got questions?
    </h2>

    <form id="contactForm" class="space-y-6 z-20" novalidate>
      <div>
        <label
          for="full-name"
          class="block text-base font-medium text-gray-700 mb-1"
          >Full name</label
        >
        <input
          id="full-name"
          name="full-name"
          required
          type="text"
          class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label
            for="email"
            class="block text-base font-medium text-gray-700 mb-1">Email</label
          >
          <input
            id="email"
            name="email"
            required
            type="email"
            class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
          />
        </div>

        <div>
          <label
            for="telephone"
            class="block text-base font-medium text-gray-700 mb-1"
            >Telephone</label
          >
          <input
            id="telephone"
            name="telephone"
            type="tel"
            class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
          />
        </div>
      </div>

      <div>
        <label
          for="message"
          class="block text-base font-medium text-gray-700 mb-1">Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
        ></textarea>
      </div>

      <div class="flex items-start pt-1">
        <input
          id="terms"
          name="terms"
          type="checkbox"
          required
          class="h-6 w-6 mr-3 mt-1"
        />
        <label for="terms" class="text-sm text-gray-600 leading-6">
          I accept the <a href="#" class="text-indigo-600 underline">terms</a>.
        </label>
      </div>

      <div class="pt-4">
        <button
          id="submitBtn"
          type="submit"
          disabled
          class="w-full py-4 rounded-xl text-white bg-[#83c3ee] disabled:opacity-60"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Optional: simple GSAP animation (run on client only) -->
<script type="module">
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";
  gsap.registerPlugin(ScrollTrigger);

  window.requestAnimationFrame(() => {
    const blobs = document.querySelectorAll(".blob");
    const hero = document.querySelector("#hero");

    gsap.fromTo(
      blobs,
      { y: 0, opacity: 0.6, scale: 1 },
      {
        y: 220,
        opacity: 0,
        scale: 0.85,
        ease: "power1.out",
        scrollTrigger: {
          trigger: hero,
          start: "top center",
          end: "bottom top",
          scrub: true,
        },
      }
    );
  });
</script>
