---
import blobShape1 from "../assets/blob_shape1.svg";
import blobShape2 from "../assets/blob_shape2.svg";
---

<style>
  /* small responsive heading rules */
  @media (min-width: 780px) {
    .mainDiv h2 {
      font-size: 2.75rem;
      line-height: 4.25rem;
    }
  }
  @media (min-width: 1200px) {
    .mainDiv h2 {
      font-size: 2rem;
    }
  }
  @media (min-width: 1400px) {
    .mainDiv h2 {
      font-size: 4rem;
    }
  }

  /* reduced motion safe */
  @media (prefers-reduced-motion: reduce) {
    .blob {
      filter: blur(14px);
      transition: none !important;
      transform: none !important;
    }
  }
</style>

<!--
  Outer wrapper must be full width (w-screen), relative, and allow overflow-visible
  so the blurred halo can extend outside without being clipped.
-->
<div id="contact" class="w-screen py-10 relative overflow-visible">
  <!-- <div
    class="blob absolute right-8 rounded-full top-52
           w-[36vw] h-[36vw] blur-[200px] md:w-[28vw] md:h-[28vw] lg:w-[24vw] lg:h-[24vw]
           bg-[#047bca]/40 opacity-70 z-0"
  >
  </div>
  <div
    class="blob absolute left-8 rounded-full top-24
           w-[36vw] h-[36vw] blur-3xl md:w-[28vw] md:h-[28vw] lg:w-[24vw] lg:h-[24vw]
           bg-[#047bca]/40 opacity-70 z-0"
  >
  </div> -->
  <img
    id="blob-shape1"
    src={blobShape1.src}
    alt="Blob Style 1"
    class="absolute -top-10 -left-10 w-[35vw] max-w-150 min-w-20 rotate-10 -z-1 pointer-events-none"
  />
  <img
    id="blob-shape2"
    src={blobShape2.src}
    alt="Blob Style 2"
    class="absolute -top-10 right-10 h-180 w-[35vw] max-w-180 min-w-25 rotate-10 pointer-events-none"
  />
  <div
    class="mainDiv p-6 md:p-12 lg:p-16 max-w-4xl mx-auto my-10 shadow-sm relative z-20 bg-white/70 rounded-xl"
  >
    <h2
      class="text-[2.5rem] lg:text-[4rem] leading-[4.25rem] font-medium text-center mb-6 text-[#474747]"
    >
      Got questions?
    </h2>

    <form id="contactForm" class="space-y-6" novalidate>
      <div>
        <label
          for="full-name"
          class="block text-base font-medium text-gray-700 mb-1"
          >Full name</label
        >
        <input
          id="full-name"
          name="full-name"
          required
          type="text"
          class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label
            for="email"
            class="block text-base font-medium text-gray-700 mb-1">Email</label
          >
          <input
            id="email"
            name="email"
            required
            type="email"
            class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
          />
        </div>

        <div>
          <label
            for="telephone"
            class="block text-base font-medium text-gray-700 mb-1"
            >Telephone</label
          >
          <input
            id="telephone"
            name="telephone"
            type="tel"
            class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
          />
        </div>
      </div>

      <div>
        <label
          for="message"
          class="block text-base font-medium text-gray-700 mb-1">Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="block w-full rounded-[8px] border border-[#e1e1e1] px-4 py-2"
        ></textarea>
      </div>

      <div class="flex items-start pt-1">
        <input
          id="terms"
          name="terms"
          type="checkbox"
          required
          class="h-6 w-6 mr-3 mt-1"
        />
        <label for="terms" class="text-sm text-gray-600 leading-6">
          I accept the <a href="#" class="text-[#bfb1ea] underline">terms</a>.
        </label>
      </div>

      <div class="pt-4">
        <button
          id="submitBtn"
          type="submit"
          disabled
          class="w-full py-4 rounded-xl text-white bg-[#ccc2ea]"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</div>
<script type="module" defer>
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";

  gsap.registerPlugin(ScrollTrigger);
  const blobShape2 = document.querySelectorAll("#blob-shape2");
  const blobShape1 = document.querySelectorAll("#blob-shape1");
  const contact = document.querySelector("#contact");

  if (blobShape1 && blobShape2 && contact) {
    gsap.to(blobShape1, {
      y: 600,
      opacity: 0.1,
      duration: 2,
      scrollTrigger: {
        trigger: hero,
        start: "top-=90px",
        end: "bottom",
        scrub: true,
      },
    });

    gsap.to(blobShape2, {
      y: 600,
      opacity: 0.1,
      duration: 4,
      scrollTrigger: {
        trigger: contact,
        start: "top-=90px",
        end: "bottom",
        scrub: true,
      },
    });
  } else {
    console.warn(
      "GSAP/ScrollTrigger failed: 'blob(s)' or 'contact' element not found."
    );
  }
</script>
