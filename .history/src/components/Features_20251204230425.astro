---

<style>
  @media (max-width: 780px) {
    .mainDiv h2 {
      font-size: 1.5rem;
    }
  }

  /* A small hint: if user prefers reduced motion we will not rely on heavy scroll-based movement */
  @media (prefers-reduced-motion: reduce) {
    [data-scroll] { transition: none !important; }
    .feature-animate { transform: none !important; }
  }


    @media (min-width: 1200px) {
      .mainDiv h2 {
        font-size: 2rem;
      }
    }
      @media (min-width: 1400px) {
      .mainDiv h2 {
        font-size: 4rem;
      }
    }
</style>

<section
id="hero"
  
  class="min-h-screen hero py-20 relative rounded-b-4xl bg-gradient-to-r from-[#0e3047] to-[#001725]"
>
  <div class="max-w-7xl mainDiv mx-auto px-6">
    <h2
      class="text-[2.75rem] lg:text-[4rem]  leading-[4.25rem] w-full text-center text-[#75a3c2]  font-semibold mb-12"
      data-scroll
      data-scroll-speed="1.5"
    >
      Features
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-12 md:gap-x-16 lg:gap-x-20">
      {features.map((feature, idx) => (
        <article
          class="flex items-start gap-8 px-[1.87rem] lg:px-[3.5rem] feature-animate"
          
         
        >
          <!-- Icon Block -->
          <div class="relative flex items-center justify-center mb-0 md:mb-0">
            <div class="icon-card w-24 h-24 md:w-28 md:h-28 rounded-2xl border-2 border-zinc-600 flex items-center justify-center bg-gradient-to-tr from-[#0e3047] to-[#001725]">
              {feature.src ? (
                
                <img
                  src={feature.src}
                  alt={feature.alt}
                  class="w-10 h-10 md:w-14 md:h-14 object-contain rounded-2xl"
                  onload="window.dispatchEvent(new Event('locomotive:update'))"
                  onerror="window.dispatchEvent(new Event('locomotive:update'))"
                />
              ) : (
                <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-10 h-10 md:w-14 md:h-14"
        set:html={feature.iconSvg}
      ></svg>
              )}
            </div>
          </div>
          <div
  class="blob  absolute top-1/2 left-8 -translate-y-1/2
         w-[25vw] h-[25vw] md:w-[20vw] md:h-[20vw] lg:w-[24vw] lg:h-[24vw]
         bg-[#047bca] opacity-10 blur-3xl rounded-full z-0"
  
></div>

          <!-- Text Block -->
          <div class="">
            <h3
              id={`feature-title-${idx}`}
              class="text-[1rem] lg:text-[1.50rem] wrap-normal leading-[1.5rem] md:text-2xl text-white/90 mb-3"
              data-scroll
              data-scroll-speed="0.6"
            >
              {feature.title}
            </h3>

            {/* <p
              class={`text-[0.75rem] md:text-base text-white/60 leading-relaxed max-w-prose mx-auto ${feature.layout === "reversed" ? "md:ml-auto md:mr-0" : "md:mx-0"}`}
              data-scroll
              data-scroll-delay={(idx * 0.12 + 0.05).toString()}
            >
              {feature.description} </p> */}
           
          </div>
        </article>
      ))}


      <!-- Placeholder to balance the grid (if features.length is odd) -->
      <article class="hidden md:block" aria-hidden="true"></article>
    </div>
  
  </div>
</section>


   <script type="module" defer>
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";

  gsap.registerPlugin(ScrollTrigger);

  const blob = document.querySelector(".blob");
  const hero = document.querySelector("#hero");

  if (blob && hero) {
    gsap.fromTo(
      blob,
      {
        // FROM state
        y: 0,
        opacity: 1,
        scale: 1,
      },
      {
        // TO state (Using clearer visibility settings)
        y: 160,
        opacity: 0,
        scale: 0.8,
        duration: 1,
        ease: "power1.out",

        scrollTrigger: {
          trigger: hero,
          start: "top mid",
          end: "bottom top",
         scurb:true,
          toggleActions: "play none none reverse",
        },
      }
    );
  } else {
    console.warn(
      "GSAP/ScrollTrigger failed: 'blob' or 'hero' element not found."
    );
  }
</script>   
