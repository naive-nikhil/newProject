---
import blobShape2 from "../assets/blob_shape2.svg";
const features = [
  {
    title: "Proven Expertise",
    description:
      "Years of experience delivering reliable, high-impact digital solutions.",
    layout: "default",
  },

  {
    title: "Creativity Meets Technology",
    description:
      "Smart tech blended with bold, innovative design.",
    layout: "reversed",
  },

  {
    title: "Dedicated expert teams",
    description:
      "Skilled teams focused on your goals from start to finish.",
    layout: "reversed",
  },

  {
    title: "Multichannel brand activation",
    description:
      "Engaging your audience across every platform for maximum brand impact.",
    layout: "reversed",
  },

  {
    title: "Innovation at Core",
    description:
      "Constantly evolving ideas to keep your business ahead.",
   src: `
      https://cdn3d.iconscout.com/3d/premium/thumb/expert-settings-3d-icon-png-download-8502611.png
    `,
    alt: "Innovation icon",
    layout: "reversed",
  },
];

---

<section
id="features"
  
  class="min-h-screen hero py-20 relative rounded-b-4xl bg-gradient-to-r from-[#0e3047] to-[#001725]"
>
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-[2.75rem] lg:text-[4rem]  leading-[4.25rem] w-full text-center text-[#75a3c2]  font-semibold mb-12"
     
    >
      Why Us ?
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-12 md:gap-x-16 lg:gap-x-40">
      {features.map((feature, idx) => (
        <article
          class="flex items-center gap-8 feature-animate"
          
         
        >
          <!-- Icon Block -->
          <div class="relative flex items-center justify-center mb-0 md:mb-0">
            <div class="icon-card w-24 h-24 md:w-28 md:h-28 rounded-2xl border-2 border-zinc-500 flex items-center justify-center bg-gradient-to-tr from-[#0e3047] via-gray-500 to-[#001725]">
              {feature.src ? (
                
                <img
                  src={feature.src}
                  alt={feature.alt}
                  class="w-14 hover:rotate-y-180 hover:scale-150 transition-transform duration-500  h-14 md:w-20 md:h-20 object-contain rounded-2xl "
                  onload="window.dispatchEvent(new Event('locomotive:update'))"
                  onerror="window.dispatchEvent(new Event('locomotive:update'))"
                />
              ) : (
                <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke="white"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-10hover:rotate-y-180 z-10 hover:scale-150 transition-transform duration-500 h-10 md:w-14 md:h-14"
        set:html={feature.iconSvg}
      ></svg>
              )}
            </div>
          </div>
          <div
  class="blob  absolute top-1/2 left-8 -translate-y-1/2
         w-[25vw] h-[25vw] md:w-[20vw] md:h-[20vw] lg:w-[24vw] lg:h-[24vw]
         bg-[#047bca]/50 opacity-8 blur-3xl rounded-full z-0"
  
></div>

          <!-- Text Block -->
          <div class="">
            <h3
              id={`feature-title-${idx}`}
              class="text-lg md:text-xl wrap-normal text-white/90 mb-3"
             
            >
              {feature.title}
            </h3>

            <p
              class={`text-[0.75rem] md:text-base text-white/60 leading-relaxed max-w-prose mx-auto ${feature.layout === "reversed" ? "md:ml-auto md:mr-0" : "md:mx-0"}`}
              data-scroll
              data-scroll-delay={(idx * 0.12 + 0.05).toString()}
            >
              {feature.description} </p> 
           
          </div>
        </article>
      ))}
      <img
    id="blob-shape2"
    src={blobShape2.src}
    alt="Blob Style 2"
    class="absolute -top-10 opacity-50 left-7 h-120 w-[35vw] max-w-180 min-w-25 rotate-10 pointer-events-none"
  />


      <!-- Placeholder to balance the grid (if features.length is odd) -->
      <article class="hidden md:block" aria-hidden="true"></article>
    </div>
  
  </div>
</section> 

<style>
  .border-shine {
    background: conic-gradient(from var(--angle, 0deg), transparent 70%, rgba(255,255,255,1) 90%, transparent 110%);
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    padding: 3px;
  }
</style>

<script type="module" defer>
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";

  gsap.registerPlugin(ScrollTrigger);

const hero = document.querySelector("#hero");
const blobs = document.querySelectorAll(".blob");

if (hero && blobs.length > 0) {
  blobs.forEach((blob, i) => {
    gsap.fromTo(
      blob,
      { y: 0, opacity: 1, scale: 1 },
      {
        y: 200,
        opacity: 0,
        scale: 0.4,
        ease: "power2.out",
        scrollTrigger: {
          trigger: hero,
          start: "top mid",
          end: "bottom top",
          scrub: 1,
        },
      }
    );
  });
}

</script>   
