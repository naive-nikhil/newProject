---
import blobShape2 from "../assets/blob_shape2.svg";
const features = [
  {
    title: "Proven Expertise",
    description:
      "Years of experience delivering reliable, high-impact digital solutions.",
    layout: "default",
  },

  {
    title: "Creativity Meets Technology",
    description:
      "Smart tech blended with bold, innovative design.",
    layout: "reversed",
  },

  {
    title: "Dedicated expert teams",
    description:
      "Skilled teams focused on your goals from start to finish.",
    layout: "reversed",
  },

  {
    title: "Multichannel brand activation",
    description:
      "Engaging your audience across every platform for maximum brand impact.",
    layout: "reversed",
  },

  {
    title: "Innovation at Core",
    description:
      "Constantly evolving ideas to keep your business ahead.",
    layout: "reversed",
  },
];

---

<section
id="features"
  
  class="py-20 relative rounded-b-4xl bg-linear-to-b from-10% from-black/89 to-violet-900 -mt-8 pb-30 px-4"
>
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-[2.75rem] lg:text-[4rem] w-full text-center text-white mb-20"
     
    >
      Why Us ?
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-12 md:gap-x-16 lg:gap-x-40">
      {features.map((feature, idx) => (
        <article
          class="flex items-center gap-8 feature-animate"
          
         
        >
          <!-- Icon Block -->
          <div class="flex items-center justify-center">
            <div class="relative icon-card w-30 h-30 rounded-3xl border border-white/30 bg-linear-to-b from-purple-500/20 to-white/5 backdrop-blur-[2px] flex items-center justify-center overflow-hidden">
            <div class="absolute h-[140%] w-[140%] bg-white/4 backdrop-blur-[2px] rotate-45 -top-[115%] -left-[115%] effect z-0"></div>
            <div class="border-shine absolute inset-[-2px] rounded-3xl pointer-events-none z-0" style="--angle: -30deg;"></div>
            <h3 class="text-4xl text-white font-medium relative z-10">{ idx + 1 }</h3>
            </div>
          </div>

          <!-- Text Block -->
          <div class="">
            <h3
              id={`feature-title-${idx}`}
              class="text-lg md:text-xl wrap-normal text-white/90 mb-3"
             
            >
              {feature.title}
            </h3>

            <p
              class={`md:text-lg text-white/60 leading-relaxed max-w-prose mx-auto ${feature.layout === "reversed" ? "md:ml-auto md:mr-0" : "md:mx-0"}`}
              data-scroll
              data-scroll-delay={(idx * 0.12 + 0.05).toString()}
            >
              {feature.description} </p> 
           
          </div>
        </article>
      ))}
      <img
    id="blob-shape2"
    src={blobShape2.src}
    alt="Blob Style 2"
    class="absolute -top-10 opacity-50 left-7 h-120 w-[35vw] max-w-180 min-w-25 rotate-10 pointer-events-none"
  />


      <!-- Placeholder to balance the grid (if features.length is odd) -->
      <article class="hidden md:block" aria-hidden="true"></article>
    </div>
  
  </div>
</section> 

<style>
  .border-shine {
    background: conic-gradient(from var(--angle, 0deg), transparent 70%, rgba(255,255,255,1) 90%, transparent 110%);
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    padding: 3px;
  }
</style>

<script type="module" defer>
  import gsap from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/index.js";
  import { ScrollTrigger } from "https://cdn.jsdelivr.net/npm/gsap@3.12.5/ScrollTrigger.min.js";

  gsap.registerPlugin(ScrollTrigger);

  const features = document.querySelector("#features");

  const effect = document.querySelectorAll(".effect");

  if (effect) {
    gsap.to(effect, {
      x: 115,
      y: 115,
      opacity: 1,
      duration: 1.2,
      scrollTrigger: {
        trigger: features,
        start: "top 40%",
        once: true,
      },
    });
  }

  // Border shine animation - animate gradient angle
  gsap.to(".border-shine", {
    "--angle": "360deg",
    duration: 2.8,
    opacity: 0,
    scrollTrigger: {
        trigger: features,
        start: "top 40%",
        once: true,
      },
  });
</script>

