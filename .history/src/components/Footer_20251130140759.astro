const trialLink = "#";
---

<section
  class="bg-gray-50/50"
  data-scroll-speed="1"
  data-scroll
  data-scroll-offset="100"
>
  <!-- Header CTA -->
  <div class="max-w-4xl mx-auto px-4 text-center pt-14 pb-10">
    <h1
      class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl
             font-semibold text-gray-900 mb-10"
    >
      Start your
      <span
        class="text-transparent"
        style="background-image: linear-gradient(to right, #805AD5, #6B46C1);
               -webkit-background-clip: text; background-clip: text;"
      >
        free trial
      </span>
      now
    </h1>

    <button
      class="px-7 py-4 rounded-lg bg-gradient-to-r from-[#614ab1] to-[#2C104C]
             text-white font-medium shadow-lg shadow-purple-500/20
             hover:shadow-purple-500/30 hover:scale-105 transition"
    >
      Free Trial
    </button>
  </div>

  <!-- Footer Content Wrapper -->
  <div class="max-w-screen-xl mx-auto w-full">
    <!-- TOP ROW -->
    <div
      class="flex flex-col md:flex-row justify-between
             mx-6 sm:mx-12 lg:mx-[4.5rem]
             py-10 md:py-[9vh]
             text-base sm:text-lg md:text-[1.4rem]
             gap-8 md:gap-0 text-center md:text-left"
    >
      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-center md:items-center"
      >
        <h1>Resources</h1>
        <h1>Help Center</h1>
        <h1>Login</h1>
      </div>

      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-center md:items-center"
      >
        <h1>Resources</h1>
        <h1>Help Center</h1>
        <h1>Login</h1>
      </div>
    </div>

    <!-- LOGO (Fully Responsive as you requested) -->
    <div class="flex justify-center my-[5vh] px-6 sm:px-3 lg:px-[4.5rem]">
      <img
        class="w-full h-auto"
        src="https://www.stableapp.cloud/app/themes/shape/assets/dist/img/svg/logo.svg"
        alt="Stable Logo"
      />
    </div>

    <!-- BOTTOM ROW -->
    <div
      class="flex flex-col md:flex-row justify-between
             mx-6 sm:mx-12 lg:mx-[4.5rem]
             py-10 md:py-[8vh]
             text-base sm:text-lg md:text-[1.4rem]
             gap-8 md:gap-0 text-center md:text-left"
    >
      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-center md:items-center"
      >
        <h1>Resources</h1>
        <h1>Help Center</h1>
        <h1>Login</h1>
      </div>

      <div
        class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-center md:items-center"
      >
        <h1>Resources</h1>
        <h1>Help Center</h1>
        <h1>Login</h1>
      </div>
    </div>
  </div>
</section>
