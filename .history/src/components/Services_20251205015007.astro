---
// src/components/PricingSection.astro

export interface PricingOption {
  title: string;
}

export interface ContactCard {
  iconPath: string;
  iconColorClass: string;
  iconBgClass: string;
  linkText: string;
  linkHref: string;
}

export interface Props {
  title: string;
  pricingOptions: PricingOption[];
  contactCard: ContactCard;
}

const { title, pricingOptions, contactCard } = Astro.props;
---
<style>
  /* Responsive typography fixes (flat media queries) */
  @media (min-width: 780px) {
    .mainDiv h2 {
      font-size: 2.75rem;
      line-height: 4.25rem;
      text-align: left;
    }
  }

  @media (min-width: 1200px) {
    .mainDiv h2 {
      font-size: 2rem;
      text-align: left;
    }
  }

  @media (min-width: 1400px) {
    .mainDiv h2 {
      font-size: 4rem;
    }
  }

  /* --- Visual polish --- */
  section.pricing-section {
    background: linear-gradient(180deg, #ffffff 0%, #fbfdff 40%);
    min-height: 100vh;
  }

  .content-wrap {
    max-width: 1200px;
    margin-inline: auto;
    padding: 2.5rem 1rem;
  }

  .main-title {
    color: #374151; /* slate-700 */
    font-weight: 800;
    margin-bottom: 2.5rem;
    letter-spacing: -0.02em;
  }

  /* Layout row */
  .row {
    display: flex;
    gap: 2rem;
    height: calc(100vh - 10rem); /* keep full-screen feel while leaving room for padding */
    align-items: stretch;
    justify-content: space-between;
  }

  /* Left / Right columns (kept original 45% split) */
  .col {
    width: 45%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 1rem;
    overflow: hidden;
  }

  /* Image styling */
  .col img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 600ms cubic-bezier(.2,.9,.3,1), filter 400ms;
    transform-origin: center;
  }

  /* subtle zoom on hover for desktop */
  .col:hover img {
    transform: scale(1.03);
  }

  /* Text blocks */
  .text-block {
    padding: 1.5rem;
    font-size: 1.05rem;
    color: #475569; /* slate-600 */
    line-height: 1.7;
    background: linear-gradient(180deg, rgba(255,255,255,0.72), rgba(255,255,255,0.64));
    border-left: 6px solid rgba(1,106,178,0.08);
    border-radius: 0.75rem;
  }

  /* make the text area visually connected to the image in the column */
  .left .text-block {
    margin-top: 1rem;
  }

  .right .text-block {
    margin-bottom: 1rem;
  }

  /* Card-like appearance around each column */
  .left-card, .right-card {
    background: rgba(255,255,255,0.66);
    border: 1px solid rgba(15,23,42,0.04);
    box-shadow: 0 18px 40px rgba(15,23,42,0.06);
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Keep image heights proportional (respecting original layout: image ~45% / 60% etc) */
  .left-card .top-image {
    height: 45%;
  }
  .left-card .text-block {
    height: 45%;
  }

  .right-card .text-block {
    height: 40%;
  }
  .right-card .bottom-image {
    height: 60%;
  }

  /* Responsive: stack columns on small screens */
  @media (max-width: 1024px) {
    .row {
      flex-direction: column;
      height: auto;
    }
    .col {
      width: 100%;
    }
    .left-card .top-image,
    .right-card .bottom-image {
      height: 40vh;
    }
    .left-card .text-block,
    .right-card .text-block {
      height: auto;
    }
    .content-wrap {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }

  /* Accessibility & reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .col img { transition: none !important; transform: none !important; }
  }
</style>

<section class="pricing-section h-screen rounded-b-4xl w-screen">
  <div class="content-wrap max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mainDiv">
    <h2 class="main-title text-[2.5rem] lg:text-[4rem] leading-[1.1] text-[#474747] mb-16 md:mb-20">
      Our Services
    </h2>

    <div class="row">
      <div class="col left">
        <div class="left-card">
          <div class="top-image">
            <img
              class="w-full rounded-none object-cover"
              src="https://themexriver.com/wp/choicy-wp/wp-content/uploads/2024/06/ab1.webp"
              alt="Service preview"
              loading="lazy"
              decoding="async"
            />
          </div>

          <div class="text-block">
            <p>
              At Technovel, we bridge the worlds of digital marketing and public
              relations to offer a holistic suite of services that build brands,
              drive visibility, and foster lasting audience connections. From
              strategic content creation and SEO to high-impact social media
              management and paid ad campaigns, we ensure your brand not
              only reaches the right audience but resonates deeply.
            </p>
          </div>
        </div>
      </div>

      <div class="col right">
        <div class="right-card">
          <div class="text-block">
            <p>
              We also specialize in media outreach, brand positioning, and
              reputation management aligning your digital presence with
              meaningful public perception. Backed by data-driven analytics
              and creative storytelling, Technovel delivers results that are
              measurable, memorable, and made to grow.
            </p>
          </div>

          <div class="bottom-image">
            <img
              class="w-full rounded-none object-cover"
              src="https://themexriver.com/wp/choicy-wp/wp-content/uploads/2024/06/ab1.webp"
              alt="Service preview 2"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
