---
// src/components/HeroTrial.astro

// Define the custom gradient for the button
const buttonGradientStyle = {
  background: "linear-gradient(to right, #8B5CF6, #A78BFA)", // Tailwind purple-500 to purple-400
  boxShadow: "0 4px 14px 0 rgba(167, 139, 250, 0.5)", // Custom shadow for depth
};
---

<section class="relative bg-white pt-16 pb-32 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div
      class="flex flex-col md:flex-row items-center justify-between mb-16 md:mb-24"
    >
      <h1
        class="text-5xl md:text-6xl font-extrabold text-gray-900 leading-tight mb-8 md:mb-0"
      >
        Get Free Trial
      </h1>
      <a
        href="/sign-up"
        class="px-8 py-3 text-lg font-semibold rounded-full text-white
                flex items-center space-x-2 transition-all duration-300
                hover:opacity-90 transform hover:scale-105"
        style={buttonGradientStyle}
      >
        <span>See now</span>
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>

    <div class="relative flex justify-center mt-12">
      <div
        class="absolute -top-16 left-1/4 w-72 h-72 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"
      >
      </div>
      <div
        class="absolute -bottom-24 right-1/4 w-80 h-80 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"
      >
      </div>

      <div class="relative w-full max-w-5xl">
        <div
          class="relative bg-gray-900 border-[16px] border-gray-900 rounded-[2.5rem] shadow-2xl overflow-hidden aspect-[4/3] transform translate-y-8 lg:translate-y-16"
        >
          <div class="absolute inset-0 bg-white p-4 lg:p-6 flex flex-col">
            <div
              class="flex justify-between items-center pb-4 border-b border-gray-200"
            >
              <div class="flex items-center space-x-2">
                <span class="font-bold text-gray-800 text-lg">stable&</span>
                <div
                  class="bg-gray-100 px-2 py-1 text-xs rounded-md text-gray-600"
                >
                  <svg
                    class="inline-block w-3 h-3 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 6h16M4 12h16m-7 6h7"></path></svg
                  >
                  DASHBOARD
                </div>
              </div>
              <div
                class="flex items-center space-x-3 text-sm text-gray-500 hidden sm:flex"
              >
                <a
                  href="#"
                  class="flex items-center px-3 py-1 bg-gray-100 rounded-md hover:bg-gray-200"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path></svg
                  >
                  Documentation
                </a>
                <a
                  href="#"
                  class="flex items-center px-3 py-1 bg-gray-100 rounded-md hover:bg-gray-200"
                >
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8.228 9.247a4.75 4.75 0 010 5.506c-.16.155-.37.232-.614.232H6.5c-.244 0-.454-.077-.614-.232a4.75 4.75 0 010-5.506C6.046 9.092 6.256 9.015 6.5 9.015h1.114c.244 0 .454.077.614.232zm8.544 0a4.75 4.75 0 010 5.506c.16.155.37.232.614.232H17.5c.244 0 .454-.077.614-.232a4.75 4.75 0 010-5.506C17.954 9.092 17.744 9.015 17.5 9.015h-1.114c-.244 0-.454.077-.614.232zM12 4v.01"
                    ></path></svg
                  >
                  Ask our team
                </a>
              </div>
            </div>

            <div class="flex flex-grow mt-4">
              <div
                class="w-1/4 bg-gray-800 text-white p-4 rounded-lg mr-4 hidden md:flex flex-col"
              >
                <div class="mb-6">
                  <p class="text-xs text-gray-400 mb-1">Organization</p>
                  <div
                    class="flex items-center justify-between text-lg font-medium"
                  >
                    <span>Unico</span>
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"></path></svg
                    >
                  </div>
                </div>
                <nav class="space-y-3 text-gray-300 text-sm">
                  <a
                    href="#"
                    class="flex items-center space-x-2 text-white bg-purple-800/50 p-2 rounded-md font-semibold"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                      ></path></svg
                    >
                    <span>Dashboard</span>
                  </a>
                  <a
                    href="#"
                    class="flex items-center space-x-2 p-2 rounded-md hover:bg-gray-700"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 19V6l12-3v14c0 1.105-.895 2-2 2H9c-1.105 0-2-.895-2-2zM4 17h1l1-1v-4L4 9V6a1 1 0 011-1h3m-3 12h1v1a1 1 0 001 1h3m-4 0v-4"
                      ></path></svg
                    >
                    <span>Cost Recommendations</span>
                  </a>
                  <a
                    href="#"
                    class="flex items-center space-x-2 p-2 rounded-md hover:bg-gray-700"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg
                    >
                    <span>Resource Explorer</span>
                  </a>
                </nav>
              </div>

              <div class="flex-grow p-4 md:p-6 bg-gray-50 rounded-lg">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">
                  Welcome to Stable
                </h2>
                <p class="text-sm text-gray-500 mb-8">
                  Your trial has started. Contact us to explore your savings
                  opportunities!
                </p>

                <div class="text-center mb-10">
                  <div
                    class="w-20 h-20 mx-auto bg-purple-700/80 rounded-lg flex items-center justify-center mb-6"
                  >
                    <svg
                      class="w-12 h-12 text-purple-200"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                      ><path d="M12 2L3 21h18L12 2z"></path></svg
                    >
                  </div>
                  <h3 class="text-3xl font-semibold text-gray-700">
                    Cost overview
                  </h3>
                </div>

                <div class="flex justify-center space-x-6">
                  <div
                    class="bg-purple-50 p-4 rounded-lg text-center border-l-4 border-purple-500"
                  >
                    <p class="text-sm text-gray-600">Annualized cost</p>
                    <p class="text-2xl font-bold text-gray-900">$6,198.25</p>
                  </div>
                  <div class="flex items-center">
                    <svg
                      class="w-6 h-6 text-gray-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                    >
                  </div>
                  <div
                    class="bg-green-50 p-4 rounded-lg text-center border-l-4 border-green-500"
                  >
                    <p class="text-sm text-gray-600">
                      Annualized Potential Savings
                    </p>
                    <p class="text-2xl font-bold text-green-700">$6,198.25</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Tailwind Utility Classes (Custom Configuration Recommended) 
        If you don't define these in your tailwind.config.js, 
        you need to add them here using standard CSS @keyframes.
    */
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  /* Assign animation to a utility class */
  .animate-blob {
    animation: blob 7s infinite cubic-bezier(0.6, -0.28, 0.735, 0.045);
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
