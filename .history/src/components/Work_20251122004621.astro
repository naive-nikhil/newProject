<script>
  // Simple accordion behavior: clicking a pill expands that card and collapses others.
  (function () {
    const toggles = Array.from(document.querySelectorAll(".card-toggle"));
    const panels = Array.from(document.querySelectorAll(".card-panel"));

    function closePanel(panel) {
      panel.style.display = "none";
      panel.setAttribute("aria-hidden", "true");
      const btn = toggles.find((t) => t.dataset.target === panel.id);
      if (btn) {
        btn.setAttribute("aria-expanded", "false");
        btn.querySelector(".toggle-icon").textContent = "+";
      }
    }

    function openPanel(panel) {
      // close others first
      panels.forEach((p) => {
        if (p !== panel && p.style.display !== "none") closePanel(p);
      });

      panel.style.display = "block";
      panel.setAttribute("aria-hidden", "false");

      // update matching toggle
      const btn = toggles.find((t) => t.dataset.target === panel.id);
      if (btn) {
        btn.setAttribute("aria-expanded", "true");
        btn.querySelector(".toggle-icon").textContent = " ";
      }
    }

    // Wire buttons
    toggles.forEach((btn) => {
      const targetId = btn.dataset.target;
      const panel = document.getElementById(targetId);

      btn.addEventListener("click", () => {
        const isOpen = btn.getAttribute("aria-expanded") === "true";
        if (isOpen) {
          closePanel(panel);
        } else {
          openPanel(panel);
        }
      });

      // keyboard support
      btn.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          btn.click();
        }
      });

      // collapse button inside panel
      const collapse = panel.querySelector(".collapse-btn");
      collapse && collapse.addEventListener("click", () => closePanel(panel));
    });

    // click outside to close any open panel
    document.addEventListener("click", (e) => {
      if (
        !e.target.closest(".card-panel") &&
        !e.target.closest(".card-toggle")
      ) {
        panels.forEach((p) => closePanel(p));
      }
    });
  })();
</script>

