<!-- Smooth expand/collapse using measured height (nice animation) -->
<script>
  (function () {
    const toggles = Array.from(document.querySelectorAll(".pill-toggle"));
    const panels = Array.from(document.querySelectorAll(".panel"));

    // initialize panels: set to zero height and invisible
    panels.forEach((p) => {
      p.style.maxHeight = "0px";
      p.style.opacity = "0";
      p.style.transition =
        "max-height 320ms cubic-bezier(.2,.9,.2,1), opacity 220ms ease";
      p.style.overflow = "hidden";
      p.style.pointerEvents = "none";
    });

    function openPanel(panel, toggle) {
      // close any other open
      panels.forEach((p) => {
        if (p !== panel && p.style.maxHeight !== "0px") closePanel(p);
      });

      // measure content height
      const inner = panel.querySelector(".panel-inner");
      const contentHeight = inner.scrollHeight;

      panel.style.display = "block"; // ensure visible for measurement (if previously none)
      // set measured height + small buffer
      panel.style.maxHeight = contentHeight + 24 + "px";
      panel.style.opacity = "1";
      panel.style.pointerEvents = "auto";
      panel.setAttribute("aria-hidden", "false");
      toggle.setAttribute("aria-expanded", "true");

      // change toggle icon to minus
      const icon = toggle.querySelector(".toggle-icon");
      if (icon) icon.textContent = "−";
    }

    function closePanel(panel) {
      // find matching toggle
      const id = panel.id;
      const toggle = document.querySelector(
        '.pill-toggle[data-target="' + id + '"]'
      );

      panel.style.maxHeight = "0px";
      panel.style.opacity = "0";
      panel.style.pointerEvents = "none";
      panel.setAttribute("aria-hidden", "true");
      if (toggle) toggle.setAttribute("aria-expanded", "false");

      if (toggle) {
        const icon = toggle.querySelector(".toggle-icon");
        if (icon) icon.textContent = "+";
      }

      // optionally set display none after transition completes
      setTimeout(() => {
        if (panel.style.maxHeight === "0px") panel.style.display = "none";
      }, 350);
    }

    toggles.forEach((btn) => {
      const targetId = btn.dataset.target;
      const panel = document.getElementById(targetId);

      // start hidden
      panel.style.display = "none";

      btn.addEventListener("click", (e) => {
        const expanded = btn.getAttribute("aria-expanded") === "true";
        if (expanded) closePanel(panel);
        else openPanel(panel, btn);
      });

      // keyboard support (Enter / Space)
      btn.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          e.preventDefault();
          btn.click();
        }
      });

      // panel internal close button
      const closeBtn = panel.querySelector(".panel-close");
      if (closeBtn) closeBtn.addEventListener("click", () => closePanel(panel));
    });

    // click outside to close
    document.addEventListener("click", (e) => {
      if (!e.target.closest(".pill-wrap") && !e.target.closest(".panel")) {
        panels.forEach((p) => closePanel(p));
      }
    });

    // close panels on ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") panels.forEach((p) => closePanel(p));
    });

    // handle resize: recalc open panel heights so transition stays smooth
    window.addEventListener("resize", () => {
      panels.forEach((p) => {
        if (p.style.maxHeight !== "0px" && p.style.display !== "none") {
          const inner = p.querySelector(".panel-inner");
          p.style.maxHeight = inner.scrollHeight + 24 + "px";
        }
      });
    });
  })();
</script>

