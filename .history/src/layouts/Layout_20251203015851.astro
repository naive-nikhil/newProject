---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Plus Jakarta Sans Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />

    <title>Technovel</title>
  </head>
  <body>
    <div id="content-wrapper">
      <slot />
    </div>
  </body>
  <script type="module" defer>
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);

    // fake smooth-ish effect
    gsap.to("body", {
      scrollTrigger: {
        trigger: "body",
        start: "top top",
        end: "bottom bottom",
        scrub: 1,
      },
    });
  </script>
</html>

<style>
  /* Disable native scrolling */
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow: hidden; /* Crucial: Prevents browser's native scroll */
    /* Remove 'scroll-behavior: smooth;' as it's no longer relevant */
  }

  /* This will be the element we move to simulate scrolling */
  #content-wrapper {
    width: 100%;
    /* No specific height needed here, as the height is determined by its content */
  }
</style>
