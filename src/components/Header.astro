---
import technovelLogo from "../assets/technovel_logo.png";
---

<div class="fixed top-6 left-0 right-0 z-50 flex justify-center px-4 w-full pointer-events-none select-none">
  
  <nav id="main-nav" class="pointer-events-auto flex flex-col bg-gray-300/80 backdrop-blur-xl rounded-[24px] shadow-2xl shadow-black/10 border border-white/40 transition-all duration-300 hover:bg-white/95 overflow-hidden">
    
    <!-- Top bar -->
    <div class="flex items-center gap-6 md:gap-8 pl-4 pr-1.5 py-1.5">
      <a 
        href="#" 
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' }); return false;"
        class="cursor-pointer hover:opacity-80 transition-opacity duration-300 shrink-0"
      >
        <img 
          src={technovelLogo.src} 
          alt="Technovel Logo" 
          class="h-8 w-auto object-contain" 
        />
      </a>

      <div class="h-5 w-px bg-slate-200 hidden md:block"></div>

      <!-- Desktop navigation -->
      <div class="hidden md:flex items-center gap-6 text-sm font-semibold text-slate-600">
        <h3 
          onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' })" 
          class="cursor-pointer transition duration-300 hover:text-[#006cb7]"
        >
          About
        </h3>
        
        <h3
          onclick="document.getElementById('services').scrollIntoView({ behavior: 'smooth' })"
          class="cursor-pointer transition duration-300 hover:text-[#006cb7]"
        >
          Services
        </h3>
      </div>

      <!-- Desktop Contact button -->
      <button
        onclick="document.getElementById('contact-root').scrollIntoView({ behavior: 'smooth' })"
        class="hidden md:block group px-6 py-2.5 rounded-full bg-[#006cb7] text-white font-medium text-sm duration-300 transition-all shadow-lg shadow-[#006cb7]/20 hover:bg-[#f38023] hover:shadow-[#f38023]/30 cursor-pointer"
      >
        <span class="group-hover:-translate-y-px duration-200 transition inline-block">
          Contact
        </span>
      </button>

      <!-- Mobile menu button -->
      <button 
        id="menu-toggle"
        class="md:hidden flex items-center justify-center w-10 h-10 rounded-full bg-[#006cb7] text-white transition-all duration-300 hover:bg-[#f38023] cursor-pointer"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-5 h-5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-5 h-5 hidden transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile expanded menu -->
    <div id="mobile-menu" class="md:hidden grid grid-rows-[0fr] opacity-0 transition-[grid-template-rows,opacity] duration-500 ease-[cubic-bezier(0.4,0,0.2,1)]">
      <div class="overflow-hidden">
        <div class="flex flex-col gap-1 px-4 pb-4 pt-2 border-t border-slate-200/60">
        <h3 
          onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' }); toggleMenu();" 
          class="cursor-pointer py-3 px-4 rounded-xl text-sm font-semibold text-slate-600 transition duration-300 hover:text-[#006cb7] hover:bg-[#006cb7]/5"
        >
          About
        </h3>
        
        <h3
          onclick="document.getElementById('services').scrollIntoView({ behavior: 'smooth' }); toggleMenu();"
          class="cursor-pointer py-3 px-4 rounded-xl text-sm font-semibold text-slate-600 transition duration-300 hover:text-[#006cb7] hover:bg-[#006cb7]/5"
        >
          Services
        </h3>

        <button
          onclick="document.getElementById('contact-root').scrollIntoView({ behavior: 'smooth' }); toggleMenu();"
          class="mt-2 py-3 px-6 rounded-full bg-[#006cb7] text-white font-medium text-sm duration-300 transition-all shadow-lg shadow-[#006cb7]/20 hover:bg-[#f38023] hover:shadow-[#f38023]/30 cursor-pointer"
        >
          Contact
        </button>
        </div>
      </div>
    </div>

  </nav>

</div>

<script>
  function toggleMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    const nav = document.getElementById('main-nav');
    
    const isOpen = mobileMenu?.classList.contains('grid-rows-[0fr]');
    
    if (isOpen) {
      // Open menu
      mobileMenu?.classList.remove('grid-rows-[0fr]', 'opacity-0');
      mobileMenu?.classList.add('grid-rows-[1fr]', 'opacity-100');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      nav?.classList.remove('rounded-[24px]');
      nav?.classList.add('rounded-[20px]');
    } else {
      // Close menu
      mobileMenu?.classList.add('grid-rows-[0fr]', 'opacity-0');
      mobileMenu?.classList.remove('grid-rows-[1fr]', 'opacity-100');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      nav?.classList.add('rounded-[24px]');
      nav?.classList.remove('rounded-[20px]');
    }
  }
  
  // Make toggleMenu globally available
  (window as any).toggleMenu = toggleMenu;
  
  document.getElementById('menu-toggle')?.addEventListener('click', toggleMenu);
</script>