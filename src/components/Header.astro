---
import technovelLogo from "../assets/technovel_logo.png";
---

<div class="fixed top-6 left-0 right-0 z-50 flex justify-center px-4 w-full pointer-events-none select-none">
  
  <nav class="pointer-events-auto flex items-center gap-6 md:gap-8 bg-white/80 backdrop-blur-xl pl-4 pr-1.5 py-1.5 rounded-full shadow-2xl shadow-black/10 border border-white/40 transition-all duration-300 hover:bg-white/95">
    
    <a 
      href="#" 
      onclick="window.scrollTo({ top: 0, behavior: 'smooth' }); return false;"
      class="cursor-pointer hover:opacity-80 transition-opacity duration-300 shrink-0"
    >
      <img 
        src={technovelLogo.src} 
        alt="Technovel Logo" 
        class="h-8 w-auto object-contain" 
      />
    </a>

    <div class="h-5 w-px bg-slate-200 hidden sm:block"></div>

    <div class="flex items-center gap-6 text-sm font-semibold text-slate-600">
      <h3 
        onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' })" 
        class="cursor-pointer transition duration-300 hover:text-[#006cb7]"
      >
        About
      </h3>
      
      <h3
        onclick="document.getElementById('services').scrollIntoView({ behavior: 'smooth' })"
        class="cursor-pointer transition duration-300 hover:text-[#006cb7]"
      >
        Services
      </h3>
    </div>

    <button
      onclick="document.getElementById('contact-root').scrollIntoView({ behavior: 'smooth' })"
      class="group px-6 py-2.5 rounded-full bg-[#006cb7] text-white font-medium text-sm duration-300 transition-all shadow-lg shadow-[#006cb7]/20 hover:bg-[#f38023] hover:shadow-[#f38023]/30 cursor-pointer"
    >
      <span class="group-hover:-translate-y-px duration-200 transition inline-block">
        Contact
      </span>
    </button>
  </nav>

</div>