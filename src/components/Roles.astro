const stats = [
  {
    id: 1,
    value: 150,
    suffix: "+",
    label: "Projects Delivered",
    description: "Successfully launched websites and apps across various industries."
  },
  {
    id: 2,
    value: 98,
    suffix: "%",
    label: "Client Retention",
    description: "Building lasting partnerships through consistent quality and support."
  },
  {
    id: 3,
    value: 5,
    suffix: "Years",
    label: "Experience",
    description: "Deep expertise in digital solutions and brand storytelling."
  },
  {
    id: 4,
    value: 24,
    suffix: "/7",
    label: "Support Team",
    description: "Always available to ensure your digital presence never sleeps."
  }
];
---

<section class="w-screen py-20 relative px-4" id="stats-section">
  <div class="max-w-7xl mx-auto">
    
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl lg:text-5xl text-black/80 mb-6 font-bold">
        Our Impact in Numbers
      </h2>
      <p class="text-lg text-slate-600 leading-relaxed">
        We believe in results that speak for themselves. Here is a snapshot of the value weâ€™ve created for our clients through dedication, strategy, and technical excellence.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        stats.map((stat) => (
          <div class="bg-white rounded-3xl p-8 shadow-xl shadow-[#013456]/10 text-center hover:-translate-y-2 transition-transform duration-300 border border-slate-100">
            <div class="flex items-baseline justify-center mb-2 text-violet-900">
              <span 
                class="text-5xl md:text-6xl font-extrabold counter" 
                data-target={stat.value}
              >
                0
              </span>
              <span class="text-3xl font-bold ml-1">{stat.suffix}</span>
            </div>
            
            <h3 class="text-xl font-bold text-slate-800 mb-3">
              {stat.label}
            </h3>
            
            <p class="text-sm text-slate-500 leading-relaxed">
              {stat.description}
            </p>
          </div>
        ))
      }
    </div>

  </div>
</section>

<script>
  // This script handles the "Count Up" animation when the section is scrolled into view
  document.addEventListener("DOMContentLoaded", () => {
    const section = document.querySelector("#stats-section");
    const counters = document.querySelectorAll(".counter");
    let hasAnimated = false;

    // Animation function
    const animateCounters = () => {
      counters.forEach((counter) => {
        const target = +counter.getAttribute("data-target"); // Get target number
        const duration = 2000; // Animation duration in ms
        const increment = target / (duration / 16); // Calculate increment per frame (60fps)

        let current = 0;

        const updateCount = () => {
          current += increment;
          if (current < target) {
            counter.innerText = Math.ceil(current);
            requestAnimationFrame(updateCount);
          } else {
            counter.innerText = target; // Ensure it ends exactly on target
          }
        };

        updateCount();
      });
    };

    // Intersection Observer to trigger animation on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !hasAnimated) {
            animateCounters();
            hasAnimated = true; // Run only once
            observer.unobserve(section); // Stop observing after animation
          }
        });
      },
      { threshold: 0.3 } // Trigger when 30% of section is visible
    );

    if (section) {
      observer.observe(section);
    }
  });
</script>